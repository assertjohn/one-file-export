{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true,
        "typeRoots": ["./types"]
    },
    "include": ["**/*.ts", "**/*.svelte", "types/**/*.d.ts"],
    "exclude": ["node_modules/*"]
}